<div class="container">
  <form data-controller="adress">
    <div class="row py-3">
      <div class="form-group col-md-6">
        <%= label_tag :street_number, "Number" %>
        <%= select_tag "street_number", options_from_collection_for_select(@street_numbers, "numero_rue", "numero_rue"), class: 'form-control' %>
      </div>
      <div class="form-group col-md-6">
        <%= label_tag :street_name, "Street" %>
        <%= select_tag "street_name", options_from_collection_for_select(@street_names, "rue_name", "rue_name"), class: 'form-control' %>
      </div>
    </div>
    <div class="row py-3">
      <div class="form-group col-md-6">
        <%= label_tag :postal_code, "Postal code" %>
        <%= select_tag "postal_code", options_from_collection_for_select(@postal_codes, "postal_code", "postal_code"), class: 'form-control', 'data-action': "change->adress#postalCode" %>
      </div>
      <div class="form-group col-md-6">
        <%= label_tag :city_name, "City" %>
        <%= select_tag "city_name", options_from_collection_for_select(@cities, "locality_name", "locality_name"), class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :district_name, "State"%>
      <%= select_tag "district_name", options_from_collection_for_select(@districts, "code", "name", "LUXE"), class: 'form-control' %>
    </div>
  </form>
</div>
